{% extends 'base.html.twig' %}

{% block body %}
    <h1>Collectif</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ collectif.id }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{% if collectif.datecreation %}{{ collectif.datecreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('collectif_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('collectif_edit', { 'id': collectif.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
